generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model user {
  id String  @id @default(uuid())
  password String 
  email String @unique
  tasks task[] 
}

model task{
  id Int @id @default(autoincrement())
  title String 
  description String
  date String
  read Boolean @default(false)
  user user @relation(fields: [userId], references: [id])
  userId String
}